extends layout

block content

	main
		//- color background
		.overlay
		
		//- logo
		#logo
			.i-logo
		
		//- search
		form#search
			//- difficulty
			fieldset
				.name.i-gauge Difficulty Level

				input(id='difficulty-all', type='radio', name='difficulty', checked='', value='')
				label(for='difficulty-all') All

				input(id='difficulty-1', type='radio', name='difficulty', value='easy')
				label(for='difficulty-1') Easy

				input(id='difficulty-2', type='radio', name='difficulty', value='moderate')
				label(for='difficulty-2') Moderate

				input(id='difficulty-3', type='radio', name='difficulty', value='hard')
				label(for='difficulty-3') Hard

			//- distance	
			fieldset
				.name.i-map Distance From Me

				input(id='distance-all', type='radio', name='drivingDuration', checked='', value='')
				label(for='distance-all') All

				input(id='distance-1', type='radio', name='drivingDuration', value='0,1')
				label(for='distance-1') <1 hour

				input(id='distance-2', type='radio', name='drivingDuration', value='1,3')
				label(for='distance-2') 1-3

				input(id='distance-3', type='radio', name='drivingDuration', value='3')
				label(for='distance-3') 3+

			//- hike length	
			fieldset
				.name.i-length Hike Length

				input(id='length-all', type='radio', name='length', checked='', value='')
				label(for='length-all') All

				input(id='length-1', type='radio', name='length', value='0,3')
				label(for='length-1') <3 mi

				input(id='length-2', type='radio', name='length', value='3,8')
				label(for='length-2') 3-8

				input(id='length-3', type='radio', name='length', value='8')
				label(for='length-3') 8+

			//- Elevation Gain	
			fieldset
				.name.i-gain Elevation Gain

				input(id='gain-all', type='radio', name='elevGain', checked='', value='')
				label(for='gain-all') All

				input(id='gain-1', type='radio', name='elevGain', value='0,1000')
				label(for='gain-1') <1000 ft

				input(id='gain-2', type='radio', name='elevGain', value='1000,3000')
				label(for='gain-2') 1000-3000

				input(id='gain-3', type='radio', name='elevGain', value='3000')
				label(for='gain-3') 3000+
				
			//- submit
			button(type='submit')
				<span class='i-search'></span>Find the Perfect Hike

	include search.jade
