//global
main
	position relative
	z-index $z-main
	min-height 100% 
	padding 0 4% //same as body border-top
	background url(../img/bg.jpg) center / cover fixed
	overflow-x hidden
	transition transform .5s ease-out
	.overlay
		position fixed
		z-index $z-overlay
		top 1px //same as body border-top
		right 0
		bottom 0
		left 0
		background alpha($black, .9)
		&.splash
			background alpha($main, .9)
	&.searching
		transform translateX(-100%)

#logo
	position relative
	margin-top 5%
	color $white
	.i-logo
		font-size 20em
		text-align center
		&:before
			margin 0
		
	
#search
	color $white
	position absolute
	bottom 0
	left 4%
	right @left
	fieldset
		margin em(0) auto em(16)
		.name
			@extend $f-s
			margin-bottom em(12)
		input[type=radio]
			display none
			+ label
				@extend $f-s
				@extend $cursor
				display inline-block
				float left
				width 24%
				text-align center
				margin 0 .5% 1em
				padding em(8)
				background-color $dark
				outline none
				transition .5s
				&:first-of-type
					border-radius em(4) 0 0 em(4)
				&:last-of-type
					border-radius 0 em(4) em(4) 0
			&:checked + label
				color $black
				background $white
			&:checked + label[for*="all"]
				color $white
				background $grey-dark

// search results nav
nav
	position fixed
	z-index $z-nav
	top 0
	left 0
	right 0
	color $grey-light
	background $black
	border-top 1px solid $main //body border-top
	border-bottom 1px solid $dark
	#back
		float left
		color $white
		background $main
		&:before
			margin 0
		&:hover, &:focus
			color $main
			background $white
	ul
		float right
		margin-right 1em
		li
			@extend $f-s
			@extend $cursor
			display inline-block
			padding .825em 0 .5em 1.5em
			transition .5s
			&.active
				color $main
		&:hover
			li
				color $grey-light
				&:hover, &:focus
					color $main

#search-results
	position absolute
	top 0
	margin-top 2.5em //nav height

.hike
	border-bottom 2px solid $dark
	// highlight (top image, name, etc)
	.img
		@extend $cursor
		position relative
		padding 5% 3em 50% 4%
		color $white
		background-size cover
		backgroun-position center
		.bg //gradient
			position absolute
			top 0
			right 0
			bottom 0
			left 0
			background: -moz-linear-gradient(top, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 75%); /* FF3.6+ */
			background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,0.5)), color-stop(75%,rgba(0,0,0,0))); /* Chrome,Safari4+ */
			background: -webkit-linear-gradient(top, rgba(0,0,0,0.5) 0%,rgba(0,0,0,0) 75%); /* Chrome10+,Safari5.1+ */
			background: -o-linear-gradient(top, rgba(0,0,0,0.5) 0%,rgba(0,0,0,0) 75%); /* Opera 11.10+ */
			background: -ms-linear-gradient(top, rgba(0,0,0,0.5) 0%,rgba(0,0,0,0) 75%); /* IE10+ */
			background: linear-gradient(to bottom, rgba(0,0,0,0.5) 0%,rgba(0,0,0,0) 75%); /* W3C */
		h1
			position relative
		.location
			@extend $f-s
			position relative
		.difficulty
			position absolute
			top 6%
			right 4%
			.numerical
				@extend $f-xl
				color $main
				sup
					position relative
					top -1em
					margin-left .25em
					color $white
					font-size 40%
			.description
				@extend $f-h3
				text-transform capitalize
				margin-top -.125em
		ul //quick details
			position absolute
			bottom 0
			left 0
			right 0
			background alpha($black,.9)
			transition .5s
			li
				display inline-block
				width 33.333333%
				text-align center
				padding .825em 0
				[class^="i-"], [class*=" i-"] 
					@extend $f-s
					color $grey-light
				.detail
					@extend $f-h3
					margin-top .125em
				&:nth-child(2)
					border-left 1px solid $dark
					border-right @border-left
	&.open
		.content
			height auto
			padding 0 4% 6%
	// main content (description, etc)
	.content
		position relative
		height 0
		overflow hidden
		background $white
		h3
			color $main
