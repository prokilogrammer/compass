@import 'normalize'
@import 'functions'

// color palette
$main = #a0f000
$white = #ffffff
$grey-light = #bec1b8
$grey-dark = #626d6f
$black = #393f44
$dark = #252b30

// responsive breakpoints
$min-desktop = "only screen and (min-width: " + em(600) + ")"

// z-indexes
$z-main = 100
$z-nav = 80

// type	
$f-s //details
	font-size em(14)
	font-weight 300
	line-height 1.2
	
$f-r //body
	font-size em(18) 
	font-weight 300
	line-height 1.4
	
$f-h3
	font-size em(18)
	font-weight 500
	line-height 1.2
	
$f-h2
	font-size em(21)
	font-weight 500
	line-height 1.2
	
$f-h1
	font-size em(26)
	font-weight 500
	line-height 1.2
	text-transform uppercase
	
$f-xl //highlight
	font-size em(40)
	font-weight 500
	
h1
	@extend $f-h1
	margin 0 auto
	
h2
	@extend $f-h2
	margin 0 auto
	
h3
	@extend $f-h2
	margin em(24) auto em(6)
	
p 
	@extend $f-r
	margin 0 auto em(4)
	
br
	display block
	content ""
	line-height 2
	margin .25em 0
	
// global
body
	margin 0 auto
	padding 0
	font-family Ubuntu, Helvetica, sans-serif
	font-size 1em
	line-height 1
	color $black
	background $white 
	border-top 1px solid $main 
	overflow-x hidden
	cursor default //removed text select on p

// ui
ul
	margin 0 auto
	padding 0
	li
		margin 0 auto
		padding 0 0 em(8)

a
	color inherit
	text-decoration none
	
form
	position relative
	label
		display block
		color inherit
	[type=submit]
		width 110%
		margin-left -5%
		padding 1em
		color $white
		background $main

input, textarea
	margin 0 auto
	padding 0
	color inherit
	border none
	border-radius 0  //removes webkit radius
	background none
	
button
	@extend $f-h2
	margin 0 auto
	padding .5em .75em
	text-transform uppercase
	color inherit
	border none
	background none
	transition .5s

//custom icons
@font-face
	font-family 'compass'
	src url('../compass.woff') format('woff')

